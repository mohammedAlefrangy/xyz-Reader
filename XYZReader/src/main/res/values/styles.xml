<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Collapsing Title Style -->
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>



    <!-- List RecyclerView Style-->
    <style name="ListRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingTop">@dimen/list_rv_padding_top</item>
        <item name="android:paddingLeft">@dimen/list_side_margin</item>
        <item name="android:paddingRight">@dimen/list_side_margin</item>
        <item name="android:paddingBottom">@dimen/list_rv_padding_bottom</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- List CardView Style -->

    <style name="ListCardView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>



</resources>
